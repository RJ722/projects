[global]
bears = coalaBear
files = **.yml, **.html, **.md, **.js, **.css
ignore = vendors/**

[linecount]
files = **.yml, **.html, **.md, **.js
bears = LineCountBear
ignore = vendors/**, data/projects.js
max_lines_per_file = 200

[filenames]
bears = FilenameBear
files = **.yml, **.html, **.md, **.js, **.css
ignore = vendors/**, data/projects/integrate-pyflakes-AST.md

[spacing]
bears = SpaceConsistencyBear
ignore = vendors/**
use_spaces = True

[html]
bears = HTMLLintBear
files = **.html
htmllint_ignore = optional_tag, protocol, indentation,  concerns_separation, capitalization

[markdown]
bears = AlexBear
files = **.md
